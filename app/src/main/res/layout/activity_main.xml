<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"
        android:textSize="20dp"
        android:text="Ruthercia" />

    <EditText
        android:id="@+id/txt_utilisateur"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPersonName"
        android:hint="Nom d'utilisateur" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Mot de Passe"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="180dp"
        android:textSize="14dp"
        android:text="Mot de passe oubliÃ©" />

    <Button
        android:id="@+id/btn_connecter"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:background="@drawable/rosita2"
        android:text="Se connecter" />

    <Button
        android:id="@+id/btn_inscription"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:background="@drawable/rosita"
        android:onClick="Inscription"
        android:text="Inscription" />
</RelativeLayout>